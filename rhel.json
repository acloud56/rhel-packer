{
  "builders": [
    {
        "type": "vsphere-iso",
  
        "vcenter_server": "{{user `vsphere-server`}}",
        "username": "{{user `vsphere-user`}}",
        "password": "{{user `vsphere-password`}}",
        "insecure_connection": "true",
  
        "cluster": "{{user `vsphere-cluster`}}",
        "datastore": "{{user `vsphere-datastore`}}",
        "folder": "{{user `vsphere-folder`}}",
        "datacenter": "{{user `datacenter`}}",
  
  
        "convert_to_template": "true",

        "vm_name": "{{user `vm-name`}}-{{user `buildtime`}}",
        "remove_cdrom": "true",
  
        "CPUs": "{{user `vm-cpu-num`}}",
        "RAM": "{{user `vm-mem-size`}}",
        "RAM_reserve_all": true,
        "firmware": "bios",
  
        "storage": [{
                "disk_size": 40960,
                "disk_thin_provisioned":true}],
        "disk_controller_type": "lsilogic-sas",
          
        "network_adapters": [
          {
            "network": "{{user `vsphere-network`}}",
            "network_card": "vmxnet3"
          }
        ],
        
        "iso_paths": [
          "{{user `os_iso_path`}}"],
  

        "http_directory": "http",
        "ssh_wait_timeout": "20m",
        "ssh_username": "kopicloud",
        "ssh_password": "kopicloud",
        "shutdown_command": "echo 'kopicloud' | sudo -S /sbin/halt -h -p",
        "boot_wait": "5s",
        "boot_command": ["<up><wait><tab><wait> text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"]
    }
  ],
  
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'kopicloud' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/vmware.sh",
      "scripts/sshd.sh",
      "scripts/cleanup.sh"
    ]
  }]

}
